<%- include('../partials/admin/header') %>
    <!-- Main Body (content)-->
    <main class="main users chart-page" id="skip-target">
      <div class="container">

        <br>

        <div>
          <div class="col col-xs-6">
            <h3 style="color: #1e140a;"><b>Equipment Maintenance:</b></h3>
            <br>
            <p id="p1"></p>
        </div>
          <br>
          <form action="/admin/hint" method="get">
            <div class="horizontal-group">
              <div class="form-group left">
                <input type="text" style="border: 1px solid black;" placeholder="Search" name="term" class="form-input" >
                <button type="submit" class="btn btn-primary" style="background-color:#0a2825; border-color: transparent;">Search <i class="fa fa-search" aria-hidden="true"></i></button>
              </div>
            </div>
          </form>

          
          <% if(error && error.length > 0){ %>
            <div class="alert alert-danger" role="alert">
                <%= error %>
            </div>
        <% } %>
        <% if(success && success.length > 0){ %>
            <div class="alert alert-success" role="alert">
                <%= success %>
            </div>
        <% } %>
        <% if(info && info.length > 0){ %>
            <div class="alert alert-info" role="alert">
                <%= info %>
            </div>
        <% } %>

          <!-- Table -->
          <table class="table table-striped table-bordered table-list">
            <thead>
              <tr>
                  <th> <center><em class="fa fa-cog"></em></center></th>
                  <th><center>Equipment Name</center></th>
                  <th><center>Brand</center></th>
                  <th><center>Condition</center></th>
                  <th><center>User</center></th>
                  <th><center>Date of Use</center></th>
                  <th><center>Life Expectancy</center></th>
              </tr>
            </thead>
            <tbody>
                  <% rows3.forEach((row, i) => { %>
                    <tr>
                      <td align="center">
                        <button type="button" class="btn btn-default">
                          <a href="inventory/<%=row.ITEM_ID%>" class="btn btn-primary" style="background-color:#152238; border-color: transparent;">Repaired</a>
                        </button>
                        <button type="button" class="btn btn-default">
                          <a href="delete/<%=row.ITEM_ID%>" class="btn btn-danger" style="background-color:#800000; border-color: transparent;">Waste</a>
                        </button>
                      </td>
                      <td><center><%=row.NAME%></center></td>
                      <td><center><%=row.BRAND%></center></td>
                      <td><center>Repairing</center></td>
                      <td><center><%=row.LOCATION %></center></td>
                      <td><center><%=row.PRICE %></center></td>
                      <td><center><%=row.LIFESPAN %></center></td>

                    </tr>
                  <% }) %>
            </tbody>
          </table>
        
        </div>
      </div>
    </main>

<%- include('../partials/footer') %>